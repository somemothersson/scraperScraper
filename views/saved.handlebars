<h1>Saved Articles</h1>

{{#each articles }}
 <div class="list-group">
  <a id="item" data-id="{{_id}}"class="list-group-item list-group-item-action">
      {{title}} 
      <button type="button" id="note" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#exampleModal">Notes</button>
      <button type="button" id="delete" class="btn btn-primary btn-sm">Delete From Saved</button>
      </a>
  <!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">{{title}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <form>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Notes</label>
    <textarea data-id="{{_id}}" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>
</form>
       
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
  {{/each}}
</div>
